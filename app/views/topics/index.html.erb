<h1>Topics</h1>

 <div class="row">
   <div class="col-md-8">
 <!-- #7 -->
     <% @topics.each do |topic| %>
       <%= render partial: 'topic', locals: {topic: topic} %>
     <% end %>
   </div>
   <div class="col-md-4">
 <!-- #9 -->
     <% if user_is_authorized_for_topics? %>
     <% unless user_is_authorized_as_mod? %>
     <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
   </div>
   <% end %>
   <% end %>
 </div>
